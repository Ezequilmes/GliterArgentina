rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and read their own files (profile photos, additional photos)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile images - publicly readable for better UX, writable by owner only
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if true; // Public read access for profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat-related files - accessible to authenticated users
    match /chats/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Profile pictures - readable by all authenticated users, writable by owner
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public files - readable by all authenticated users
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Exclusive profiles - readable by authenticated users, writable by admins
    match /users/{userId}/photos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.admin == true || request.auth.token.role == 'admin' || 
         userId.matches('exclusive_.*'));
    }
  }
}