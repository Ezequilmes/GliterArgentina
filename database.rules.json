{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": "auth != null && auth.uid == $uid",
        "presence": {
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    
    "typing": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null && $userId == auth.uid"
        }
      }
    },
    
    "presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    
    "notifications": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null",
        "$notificationId": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null"
        }
      }
    }
  }
}