{
  "name": "gliter-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start -p ${PORT:-3000}",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "prepare:ci": "rm -rf node_modules package-lock.json && npm ci --omit=dev && npm run type-check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "mcp": "node scripts/mcp-server.js",
    "setup:production": "npm run build:production && npm run type-check",
    "deploy:apphosting": "firebase apphosting:backends:create --project gliter-argentina",
    "deploy:functions": "firebase deploy --only functions --project gliter-argentina",
    "deploy:firestore": "firebase deploy --only firestore --project gliter-argentina",
    "deploy:storage": "firebase deploy --only storage --project gliter-argentina",
    "deploy:backend": "npm run deploy:functions && npm run deploy:firestore && npm run deploy:storage",
    "deploy:all": "npm run deploy:backend && npm run deploy:apphosting",
    "logs:apphosting": "firebase apphosting:backends:logs --project gliter-argentina",
    "logs:functions": "firebase functions:log --project gliter-argentina"
  },
  "dependencies": {
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^12.3.0",
    "geofirestore": "^5.2.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.4.4",
    "typescript": "5.9.3",
    "web-push": "^3.6.7"
  },
  "resolutions": {
    "@firebase/logger": "0.5.0"
  },
  "overrides": {
    "@firebase/logger": "0.5.0"
  }
}
